@* #region code/request_objets/aspnetcore/user_iprincipal.cstml *@

@using System.Security.Claims;

@if (Context.User.Identity.IsAuthenticated)
{
    <p>Hello, <b>@Context.User.Claims.Where(c => c.Type == ClaimTypes.GivenName)</b>!</p>
}

@* #endregion *@

@* #region code/request_objects/aspnetcore/injecting_user_view.cshtml *@

@inject Lazy<Stormpath.SDK.Account.IAccount> Account;

@if (Account.Value != null)
{
    <p>Hello, <b>@Account.Value.GivenName</b>!</p>
}

@* #endregion *@